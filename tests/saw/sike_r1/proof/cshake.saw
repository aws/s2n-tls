    nblocks <- crucible_fresh_var "nblocks" digit_t;
    (s, sp) <- ptr_to_fresh "s" (llvm_array ns digit_t);
    crucible_execute_func [op, (tm nblocks), sp];
    res <- crucible_fresh_var "res" digit_t;
