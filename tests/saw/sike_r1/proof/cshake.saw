    (s, sp) <- ptr_to_fresh "s" (llvm_array ns digit_t);
    (i, ip) <- ptr_to_fresh "input" (llvm_array ni i8);
    iB <- crucible_fresh_var "inputByteLen" i32;
    crucible_execute_func [sp, ip, (tm iB)];
