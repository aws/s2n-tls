    ];

let O_base_SecretA = concat O_base_Secret
    [ fpadd_same_ov
    , fpadd_pair_ov
    , LADDER3PT_A_ov
    , fp2div2_same_ov
    ];

let O_base_SecretB = concat O_base_Secret
    [ fpadd_same_ov
    , fpadd_pair_ov
